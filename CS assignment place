int add(int)
{
	int x, y;
	int ans;
	x = rand() % 1000;
	y = rand() % 1000;
	cout << "What is " << x << " + " << y << "?\n";
	cin >> ans;
	if (ans == x + y) 
	{
		string ans;
		cout << "You are correct!" << endl;
		cout << "Do you want do another problem?" << endl;
		cin >> ans;
			if (ans == "yes" || ans == "Yes" || ans == "y" || ans == "Y")
			{
				int count = 0;
				while (count < 11)
				{
					add(10);
				}
			}
			else
			{
				return 0;
			}
	}
	else
	{
		cout << "Louis: Your insane.\n";
		cout << "Lex: NO! no... not that the other thing.\n";
		cout << "Louis: Superman will...\n";
		cout << "Lex: WRONG!!!" << endl;
	}
	return 0;
}

