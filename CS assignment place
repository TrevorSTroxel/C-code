int add(int input)
{
	int input, winput1, winput2, winput3, x, y;
	string ans;
	x = rand() % 1000;
	y = rand() % 1000;
	input = x + y;
	winput1 = x + x;
	winput2 =  y + y;
	winput3 = x * y;
	return input;
}

int sub(int)
{
	int input, winput1, winput2, winput3, x, y;
	string ans;
	x = rand() % 1000;
	y = rand() % 1000;
	input = x - y;
	winput1 = x - x + (y / 2);
	winput2 = y + y + (x / 2);
	winput3 = x * y;
	return input;
}

int mul(int)
{
	int input, winput1, winput2, winput3, x, y;
	string ans;
	x = rand() % 1000;
	y = rand() % 1000;
	input = x * y;
	winput1 = x * x;
	winput2 = y * y;
	winput3 = x / y;
	return input;
}

int div(int)
{
	int input, winput1, winput2, winput3, x, y;
	string ans;
	x = rand() % 1000;
	y = rand() % 1000;
	input = x / y;
	winput1 = x / x + (y * 2);
	winput2 = y / y + (x * 2);
	winput3 = x * y;
	return input;
}
