#include "stdafx.h"
#include <iostream>
#include <cstdlib>
#include <ctime>
#include <string>
using namespace std;

void ex02 ()
{
int x, y;
srand(time(NULL));
x = rand();
y = rand();

if (x >= y)
{
cout << x << " (x) is greater than (y) " << y << endl << endl;
}

else
{
cout << y << " (y) is greater than (x) " << x << endl << endl;
}

int numberOfShares;
cout << "Enter a number" << endl;
cin >> numberOfShares;

if (numberOfShares < 100)
{
cout << "Value is less than 100" << endl << endl;
}

int w, w2;
cout << "Enter a box width and a book width." << endl;
cin >> w;
cin >> w2;

if (w % w2 == 0)
{
cout << "Box width is evenly divisable by the book width" << endl << endl;
}

cout << "What is the shelf life of chocolate?" << endl;
int life;
cin >> life;
cout << "What is the temature outside?" << endl;
int temp;
cin >> temp;

if (temp >= 90)
{
cout << "The shelf life is " << life - 4 << endl;
}

bool hasPassedTest;
hasPassedTest = 1;

system("pause");
}

void ex03()
{
cout << "Enter a side of a square." << endl;
int a;
cin >> a;
cout << "The area is " << a*a << endl;

cout << "Enter Y or N" << endl;
char b;
cin >> b;

if (b == 'Y')
{
cout << "Yes" << endl;
}

else if (b == 'N')
{
cout << "No" << endl;
}

char t;
t = 9;

string mailingAddress;
cout << "Enter mailing address" << endl;
cin >> mailingAddress;

string empty;
empty = "";

system("pause");
}

void ex04()
{
	cout << "Enter a # between 1 and 10" << endl;
	int num;
	cin >> num;

	while ((num < 1) || (num > 10))
	{
		cout << "Enter a # between 1 and 10" << endl;
		cin >> num;
	}

		int sum = 0;
		for (int i = 1; i <= num; i++)
		{
			sum += i * i * i;
		}
		cout << sum << endl;
}

void ex05()
{
	cout << "Enter 5 values" << endl;
	int sum = 0;

	int i[5];

	for (int a = 0; a < 5; a++)
	{
		cin >> i[a];
	}
	
	for (int a = 0; a < 5; a++)
	{
		sum += i[a];
	}
	cout << sum << endl;
}

int main()
{
	ex02();
	ex03();
	ex04();
	ex05();
	system("pause");
}

